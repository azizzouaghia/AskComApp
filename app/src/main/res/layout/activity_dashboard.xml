<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/dash_header"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="15dp"
            android:onClick="back"
            android:paddingLeft="5dp"
            android:src="@drawable/back_icon2"></ImageView>

        <ImageView
            android:id="@+id/dashboard_logo"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="15dp"
            android:paddingLeft="5dp"
            android:src="@drawable/askcom"></ImageView>


        <ImageView
            android:id="@+id/dashboard_icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="16dp"
            android:onClick="newQuestion"
            android:src="@drawable/add_icon2"></ImageView>

        <ImageView
            android:id="@+id/profil_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:onClick="profile"
            android:src="@drawable/profile_icon"></ImageView>

    </LinearLayout>

    <ListView
        android:id="@+id/question_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:listSelector="@android:color/transparent"
        android:paddingTop="16dp"
        android:paddingBottom="16dp" />

</LinearLayout>
